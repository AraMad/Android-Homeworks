<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="actionBarTheme">@style/ActionBar</item>
    </style>

    <style name="ActionBar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/ActionBar.Title</item>
    </style>

    <style name="ActionBar.Title">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="StyledToast">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:colorBackground">@color/backgroundToastAndImageColor</item>
        <item name="android:radius">@dimen/toast_radius</item>
    </style>

</resources>
